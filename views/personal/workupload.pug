  // nav
  include ../navigator.pug

  // body-title
  <div class="container-title">
    <div class="row">
      <h3 class="col-3">商品上架</h3>
      <h3 class="col-auto mr-auto">商品集</h3>
      <div class="col-auto">
        <select class="selectpicker">
          <option value="1" selected>最新</option>
          <option value="2">價格：由高至低</option>
          <option value="3">價格：由低至高</option>
          <option value="4">最舊</option>
        </select>
      </div>
    </div>
  </div>

  // body
  <div class="container-card">
    <div class="row">
      <div class="col-3">
        <div id="accordionFilter" class="mb-3">
          // filter
          <div class="card">
            <div class="card-header row" id="heading" data-toggle="collapse" data-target="#collapseFilter" aria-expanded="true" aria-controls="collapse">
              
              <div class="col-auto mr-auto">篩選</div>
              <div class="col-auto pr-0">〉</div>
                
            </div>

            <div id="collapseFilter" class="collapse show" aria-labelledby="heading" data-parent="#accordionFilter">
              <div class="card-body">
                // search box
                <div class="input-group align-items-center mb-3">
                  <i class="fas fa-search"></i>
                  <input type="search" id="form1" class="form-control" placeholder="搜尋作品或商品集名稱"/>
                </div>
                // radio
                <div class="container-radio overflow-auto">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">Monster(13)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">CryptoPenguins(20)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">PandaMultiverse(15)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">LuckyCat(15)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                    <label class="form-check-label" for="flexRadioDefault1">Monster(13)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">CryptoPenguins(20)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                    <label class="form-check-label" for="flexRadioDefault2">PandaMultiverse(15)</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="row">
          <button id="upload-btn" type="button" class="col-4 align-self-center" data-toggle="modal" data-target="#exampleModalCenter">+</button>
          <div class="modal fade bd-example-modal-xl" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form class="row" action="" method="post">
                    <div id="container-upload" class="col-6 text-center">
                      <img src="" id="preview" width="300"height="300">
                      <input type="file" id="imageupload" name="image" style="display:none;" onchange=previewFile()><br>
                      <i class="bi bi-upload" style="font-size: 5rem;"></i>
                      <label for="imageupload">上傳圖片</label>
                      <p>格式限制：jpg、gif、png</p>
                    </div>
                    <input type="hidden" id="ipfsuri" name="ipfsuri" readonly>
                    <div class="col-1"></div>
                    <div class="col-5">
                      <label for="collection">商品集*</label><br>
                      // using dropdown?
                      each val in collections
                        <select class="form-select" aria-label="Default select example">
                          <option selected>選擇商品集</option>
                          <option value=#{val.name}>#{val.name}</option>
                          //<option value="2">Collection 2</option>
                          //<option value="3">Collection 3</option>
                          <option value="4"><a href="/addCollection">新增商品集</a></option>
                        </select><br>
                      <br>
                      <input class="textfield" type="text" id="name" name="name" placeholder="作品名稱*"><br>
                      <input class="textfield" type="text" id="symbol" name="symbol" placeholder="作品代號*"><br>
                      <input class="textfield" type="text" id="description" name="description" placeholder="作品描述"><br>
                      <input class="textfield" type="text" id="price" name="price" placeholder="價格*"><br>
                      <span>#{warn}</span>
                      <br>
                      <input class="btn-submit" type="submit" id="upload" value="上傳NFT">
                      <br>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

          if (goods)
            each val in goods
              <div class="col-4 explore-card">
                <div>
                  <a href="explore_detail"><img src=#{val.uri} width="285" height="285"></a>
                </div>
                <p for="" id="" class="description">#{val.collection}</p>
              </div>
        </div>
      </div>
    </div>
  </div>


  <div class="overview">
    <br>
    if (works)
      each work in works
        <br>
        <br>
        <div class=info>
          <div class="container">
            <form action="" method="post">
                <img src=#{work[0]} width="400"height="240">
                <label for="address">作品地址:</label>
                <dd>#{work[1]}</dd>
                <label for="id">作品ID:</label>
                <dd>#{work[2]}</dd>
                <label for="price">價格</label>
                <dd>$2</dd>
                <input type="hidden" name="contractaddress" id="contractaddress"value=#{work[1]} readonly>
                <input type="hidden" name="tokenid" id="tokenid" value=#{work[2]} readonly>
                <input type="button" id="buy" value="購買">
            </form>
          </div>
        </div>
  </div>

