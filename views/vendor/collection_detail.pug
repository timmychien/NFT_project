<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
</head>
<body>
<title>#{title}</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/vendor/collection_detail.css">
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  
  // navigator
  include ../navigator.pug

  // collection detail
  <h5 class="text-center my-5">商品集詳情</h5>
  <div class="container">
    <div class="row">
        <div class="col">
            <img src=#{uri} class="img-fluid">
        </div>
        <div class="col">
            // todo: edit button
            <div class="row dropdown">
              <button class="btn dropdown-toggle ml-auto" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
                <i class="fa fa-ellipsis-h"></i>
              </button>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" href="" disabled>編輯</a>
                <a class="dropdown-item" href="">刪除</a>
              </div>
            </div>
            // collection description
            <div class="row">
              <div class="title">#{title}</div>
            </div>
            <div class="row">
              <div class="detail">#{description}</div>
            </div>
        </div>
    </div>

    // divider
    <hr>
    
    // goods
    <h5 class="text-center my-5">商品</h5>
    <div class="row">
      if (goods)
        each val in goods
          <div class="col-4 explore-card">
            <div>
              <a href="#"><img src=#{val[0]} width="285" height="285"></a>
            </div>
            <p for="" id="" class="description">#{val[4]}</p>
            <div class="row">
              <div class="col-auto mr-auto" for="" id="" class="title-sm"><p>#{val[1]}</p></div>
              <div class="col-auto" for="" id="price">
                <p>#{val[5]}</p>
              </div>
            </div>
          </div>
    </div>

  </div>


  // footbar
  include ../footbar.pug

//<script src="/javascripts/vendorabi.js"></script>
//<script src="/javascripts/vendor/collection_detail.js"></script>
</body>
</html>